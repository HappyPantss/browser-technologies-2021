                        </div>
                    </div>
                </fieldset>
                <figure class="tshirt-container">
                </figure>
                <input type="submit" value="send" class="save-button"></input>
            </form>
        </section>
    </section>

    <script src="/js/liveName.js"></script>
    <script>
        var liveColor = document.querySelectorAll('.color.change-live')

        for (var i = 0; i < liveColor.length; i++) {
            liveColor[i].classList.remove('change-live')
        }

        window.onload = function() {
            var allColors = document.querySelector('.css-colors')
            allColors.style.display = 'none'

            var allColors = document.querySelector('.colorpicker-container')
            allColors.style.display = 'block'

            var color = document.getElementById("color");
            var dropbox = document.getElementById("dropbox");

            // Wanneer u begint met slepen, stelt u de kleurwaarde in op de gegevens van het dataTransfer-object.
            color.ondragstart = function(e) {
                e.dataTransfer.setData("text/plain", e.target.value);
            }

            // Als de muisaanwijzer over het sleepdoelelement wordt bewogen, wordt de standaardbrowserbewerking geannuleerd (vereist).
            dropbox.ondragover = function(e) {
                e.preventDefault();
            }

            // Bij het neerzetten van een element wordt de achtergrondkleur van het border box ingesteld met de data van dataTransfer.
            dropbox.ondrop = function(e) {
                e.preventDefault(); // Annuleer de standaard browserbewerking (optioneel)
                e.target.style.fill = e.dataTransfer.getData("text/plain");

            }
        }
    </script>

