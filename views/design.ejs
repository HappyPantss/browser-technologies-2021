        <div class="loginArea">
            <form action="/" method="post" class="design-form">

                <fieldset>
                    <legend>Personal Information</legend>
                    <div class="inputs">
                        <label for="name">Name</label>
                        <input type="text" id="name" name="name" pattern="^(\w\w+)\s(\w+)$" required>

                        <label for="phone">Phone</label>
                        <input type="tel" id="phone" name="phone" placeholder="0612345678" pattern="[0-9]{10}" required>

                        <label for="email">E-mail</label>
                        <input type="email" id="email" name="email" placeholder="sergio@example.com" size="30" required>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>Choose your Text</legend>
                    <input type="text" id="text" name="text" oninput="changeText()" maxlength="35" required>
                </fieldset>
                <fieldset>
                    <legend>Choose your Gender</legend>
                    <div class="inputs">
                        <input type="radio" id="male" class="gender" name="gender" value="male" required>
                        <label for="male">Male</label>

                        <input type="radio" id="female" class="gender" name="gender" value="female">
                        <label for="female">Female</label>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>Choose your Size</legend>

                    <div class="inputs">
                        <input type="radio" id="S" class="size" name="size" value="S" required>
                        <label for="S">S</label>

                        <input type="radio" id="M" class="size" name="size" value="M">
                        <label for="M">M</label>

                        <input type="radio" id="L" class="size" name="size" value="L">
                        <label for="L">L</label>

                        <input type="radio" id="XL" class="size" name="size" value="XL">
                        <label for="XL">XL</label>

                        <input type="radio" id="XXL" class="size" name="size" value="XXL">
                        <label for="XXL">XXL</label>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>Customize</legend>

                    <div class="block">
                        <h2>Color:</h2>
                        <div class="css-colors">
                            <input type="radio" id="white" class="color" name="color" value="white" required>
                            <label for="white">White</label>

                            <input type="radio" id="black" class="color" name="color" value="black">
                            <label for="black">Black</label>

                            <input type="radio" id="red" class="color" name="color" value="red">
                            <label for="red">Red</label>

                            <input type="radio" id="green" class="color" name="color" value="green">
                            <label for="green">Green</label>

                            <input type="radio" id="blue" class="color" name="color" value="blue">
                            <label for="blue">Blue</label>

                            <input type="radio" id="pink" class="color" name="color" value="pink">
                            <label for="pink" id="pinkLabel">Pink</label>

                        </div>
                    </div>
                </fieldset>
                <figure class="tshirt-container">
                </figure>
                <input type="submit" value="send" class="save-button"></input>
            </form>
        </div>
    </div>

    <script src="/js/liveName.js"></script>

    <script>
        function allowEnter(event) {
            event.target.style.border = "3px dotted red";
        }

        function dragStart(event) {
            event.dataTransfer.setData("Text", event.target.id);
        }

        function allowDrop(event) {
            event.preventDefault();
        }

        function drop(event) {
            event.preventDefault();
            var data = event.dataTransfer.getData("Text");
            event.target.appendChild(document.getElementById(data));
        }
