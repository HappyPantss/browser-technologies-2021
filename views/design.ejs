<%- include ("./partials/head") %>
    <a href="/">back</a>
    <h1>Nerdy T-Shirts</h1>

    <section class="container">
        <h2>Design new T-Shirt</h2>
        <section>
            <form action="/" method="post" class="design-form">
                <fieldset>
                    <legend>Personal Information</legend>
                    <div class="inputs">
                        <label for="name">Name</label>
                        <input type="text" id="name" name="name" pattern="^(\w\w+)\s(\w+)$" required>

                        <label for="phone">Phone</label>
                        <input type="tel" id="phone" name="phone" placeholder="0612345678" pattern="[0-9]{10}" required>

                        <label for="email">E-mail</label>
                        <input type="email" id="email" name="email" placeholder="sergio@example.com" size="30" required>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>Choose your Gender</legend>
                    <div class="inputs">
                        <input type="radio" id="male" class="gender" name="gender" value="male" required>
                        <label for="male">Male</label>

                        <input type="radio" id="female" class="gender" name="gender" value="female">
                        <label for="female">Female</label>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>Choose your Size</legend>

                    <div class="inputs">
                        <input type="radio" id="S" class="size" name="size" value="S" required>
                        <label for="S">S</label>

                        <input type="radio" id="M" class="size" name="size" value="M">
                        <label for="M">M</label>

                        <input type="radio" id="L" class="size" name="size" value="L">
                        <label for="L">L</label>

                        <input type="radio" id="XL" class="size" name="size" value="XL">
                        <label for="XL">XL</label>

                        <input type="radio" id="XXL" class="size" name="size" value="XXL">
                        <label for="XXL">XXL</label>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>Customize</legend>

                    <div class="block">
                        <h2>Color:</h2>
                        <div class="css-colors">
                            <input type="radio" id="white" class="color change-live" name="color" value="#CCCCCC" required>
                            <label for="white">White</label>

                            <input type="radio" id="black" class="color change-live" name="color" value="#1a1919">
                            <label for="black">Black</label>

                            <input type="radio" id="red" class="color change-live" name="color" value="#a82c2c">
                            <label for="red">Red</label>

                            <input type="radio" id="green" class="color change-live" name="color" value="#32a852">
                            <label for="green">Green</label>

                            <input type="radio" id="blue" class="color change-live" name="color" value="#6dc0e3">
                            <label for="blue">Blue</label>

                            <input type="radio" id="pink" class="color change-live" name="color" value="#ed91ed">
                            <label for="pink" id="pinkLabel">Pink</label>

                        </div>

                        <div class="colorpicker-container">
                            <label for="pink" id="pinkLabel">Pick a color:</label>
                            <input type="color" id="color" class="colorpicker" name="color" draggable="true">
                        </div>

                        <h2>Text:</h2>

                        <label for="text">Text</label>
                        <input type="text" id="text" name="text" oninput="changeText()" maxlength="28" required>

                        <div class="sofa">
                            <p id="demo"></p>
                            <svg id="dropbox" version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="300" height="300" viewBox="0 0 40.143 40.143" xml:space="preserve">
